local deftest = require("deftest.deftest")

function init(self)
	deftest.add(require("test.tests.test_schedule_basic"))
	deftest.add(require("test.tests.test_schedule_cycles_every"))
	deftest.add(require("test.tests.test_schedule_cycles_weekly"))
	deftest.add(require("test.tests.test_schedule_cycles_monthly"))
	deftest.add(require("test.tests.test_schedule_cycles_yearly"))
	deftest.add(require("test.tests.test_schedule_conditions"))
	deftest.add(require("test.tests.test_schedule_chaining"))
	deftest.add(require("test.tests.test_schedule_lifecycle"))
	deftest.add(require("test.tests.test_schedule_state"))
	deftest.add(require("test.tests.test_schedule_catchup"))
	deftest.add(require("test.tests.test_schedule_mintime"))
	deftest.add(require("test.tests.test_schedule_events"))
	deftest.add(require("test.tests.test_schedule_logger"))

	local is_report = (sys.get_config_int("test.report") == 1)
	deftest.run({ coverage = { enabled = is_report } })
end
